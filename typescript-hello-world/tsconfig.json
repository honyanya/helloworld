{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.json"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
